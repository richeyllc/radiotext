<div class="modal-content">
  <div class="modal-header">
    <button class="close" data-dismiss="modal" type="button"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
    <h3 class="modal-title" id="lineModalLabel">
      Update Listener
    </h3>
  </div>
  
  <%= form_for @listener do |f| %>
    
    <div class="modal-body">
      <div class="form-group">
        <label>Name</label>
        <%= f.text_field :name, class: "form-control", placeholder: "Enter Listener Name" %>
      </div>
      
      <div class="form-group">
        <label>Email</label>
        <%= f.email_field :email, class: "form-control", placeholder: "Enter Listener Email" %>
      </div>
      
      <div class="form-group">
        <label>Address</label>
        <%= f.text_field :address, class: "form-control", placeholder: "Enter Listener Address" %>
      </div>
      
      <div class="form-group">
        <label>City</label>
        <%= f.text_field :city, class: "form-control", placeholder: "Enter Listener City" %>
      </div>
      
      <div class="form-group">
        <label>State</label>
        <%= f.text_field :state, class: "form-control", placeholder: "Enter Listener State" %>
      </div>
      
      <div class="form-group">
        <label>Zip Code</label>
        <%= f.text_field :zip_code, class: "form-control", placeholder: "Enter Listener Zip Code"%>
      </div>
      
      <div class="form-group">
        <label>Age</label>
        <%= f.number_field :age, class: "form-control", placeholder: "Enter Listener Age" %>
      </div>
      
      <div class="form-group">
        <label>Date of Birth</label>
        <%= f.date_select(:date_of_birth, prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, class: "form-control", placeholder: "Enter Listener Date of Birth") %>
      </div>
      
      <div class="form-group">
        <label>Notes</label>
        <%= f.text_area :notes, class: "form-control", placeholder: "Notes About Listener" %>
      </div>
      
    </div>
    <div class="modal-footer">
      <div aria-label="group button" class="btn-group btn-group-justified" role="group">
        <div class="btn-group" role="group">
          <%= f.submit 'Save', class: "btn btn-default btn-hover-green" %>
        </div>
      </div>
    </div>
  <% end %>
</div>