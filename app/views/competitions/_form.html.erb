<%= form_for @competition do |f| %>
  <label>Title</label>
  <%= f.text_field :title, placeholder: "Competition Title" %>
  <br />
  <label>Keyword</label>
  <%= f.text_field :keyword, placeholder: "Competition Keyword" %>
  <br />
  <p>Note: Please choose a Winning Schema or a Nth Listener and NOT both!</p>
  
  <label>Winning Schema</label>
  <%= f.select :category, grouped_options_for_select(
    'Default' => [
                  ['One Winner','one_random']
                 ],
                 
    'Multiple Winners' => [ 
                              ['Two Winners', 'two_random'],
                              ['Three Winners', 'three_random'],
                              ['Four Winners', 'four_random'],
                              ['Five Winners', 'five_random']
                             ],
                        
    'First or Last' => [
                        ['First Listener', 'first_listener'],
                        ['Last Listener', 'last_listener']
                       ]
          
  ), {prompt: 'None'} %>
  
  <br></br>
  <label>Nth Listener</label>
  <%= f.select :nth_listener, (1..200), {prompt: 'None'} %>
  
  <%= f.submit "Save" %>
<% end %>